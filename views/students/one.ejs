<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <% if(student.gender == 'male') { %>
          <img src="/images/male.jpg" alt="image" width="300px">
          <% } else { %>
            <img src="/images/female.jpg" alt="image" class="img-responsive" width="300px">
            <% } %>
      </div>
      <div class="col-md-8">
      	<h1><%= student.firstName %> <%= student.lastName %></h1>
        <div class="display-inline-block">
          <a href="/students/edit/<%= student.id %>" class="btn btn-success">Edit Student Record</a>
          <form class="display-inline-block" action="/student/delete/<%= student.id %>" method="POST">
            <button class="btn btn-warning">Delete Student Record</button>
          </form>
        </div>
        <a href="/students" class="btn btn-inf">Go back</a>
      </div>
    </div>
  </div>
</div>
<div class="container student-information">
  <div class="row">
    <div class="col-md-6">
      <h1>Personal Information</h1>
      <p><b>Phone Number:</b> <%= student.mobile %></p>
      <p><b>Email:</b> <%= student.email %></p>
      <p><b>Date of Birth:</b> <%= formatDate(student.dateOfBirth) %></p>
      <p><b>Religion:</b> <%= student.religion %></p>
    </div>
    <div class="col-md-6">
      <h1>Academic Information</h1>
      <p><b>Course:</b> <%= student.course %></p>
      <p><b>Level:</b> <%= student.level %></p>
      <p><b>Grade:</b> <%= student.grade %></p>
      <p><b>Date registered:</b> <%= formatDate(student.createdAt) %></p>
    </div>
  </div>
</div>


<% function formatDate(date) { %>
<%   var d = new Date(date); %>
<%   var month = '' + (d.getMonth() + 1); %>
<%   var day = '' + d.getDate(); %>
<%   var year = d.getFullYear(); %>
<%    if (month.length < 2) month = '0' + month; %>
<%    if (day.length < 2) day = '0' + day; %>
<%    return [year, month, day].join('-'); %>
<% } %>