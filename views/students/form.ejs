<% if(typeof student == 'object' && student) { %>
<form action="/students/<%= student.id %>" method="POST" role="form">
  <legend>Student details</legend>
  <div class="form-group">
    <label for="first-name">First Name</label>
    <input type="text" class="form-control input-lg" name="firstName" id="" placeholder="First Name" value="<%= student.firstName %>">
    <label for="middle-name">Middle Name</label>
    <input type="text" class="form-control input-lg" name="middleName" id="" placeholder="Middle Name" value="<%= student.middleName %>">
    <label for="last-name">Last Name</label>
    <input type="text" class="form-control input-lg" name="lastName" id="" placeholder="Last Name" value="<%= student.lastName %>">
    <label for="phone">Phone Number</label>
    <input type="text" class="form-control input-lg" name="mobile" id="" placeholder="+234 XXX XXX XXXX" value="<%= student.phone %>">
    <label for="last-name">Date of Birth</label>
    <input type="text" class="form-control input-lg" name="dateOfBirth" id="" placeholder="dd/mm/yyyy" value="<%= student.dateOfBirth %>">
    <label for="last-name">E-mail</label>
    <input type="email" class="form-control input-lg" name="email" id="" placeholder="sample@email.com" value="<%= student.email %>">
    <label for="last-name">Gender</label>
    <input type="dropdown" class="form-control input-lg" name="gender" id="" placeholder="Male"  value="<%= student.firstName %>" value="<%= student.gender %>">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<% } else{ %>
